<%- include ('partials/header.ejs') %> <%- include ('partials/main_nav.ejs') %>

<main class="container">
  <div class="jumbotron">
    <h1 class="display-4"><%= title %></h1>
  </div>

  <body>
    <br />
    <div class="content">
      <h3>Contact Me:</h3>
      <form action="mailto:schhangu@my.centennialcollege.ca" method="post">
        <table>
          <tr>
            <td><br /><b>Full Name</b></td>
          </tr>
          <tr>
            <td>
              <input
                type="text"
                name="fname"
                placeholder="First Name"
                tabindex="1"
              />
            </td>
            <td>
              <input
                type="text"
                name="lname"
                placeholder="Last Name"
                tabindex="2"
              />
            </td>
          </tr>
          <tr>
            <td><br /><b>Email</b></td>
            <td><br /><b>Contact Number</b></td>
          </tr>
          <tr>
            <td>
              <input
                type="email"
                name="email"
                placeholder="name@email.com"
                tabindex="3"
              />
            </td>
            <td>
              <input
                type="tel"
                name="phone"
                placeholder="123-456-7890"
                tabindex="4"
              />
            </td>
          </tr>
        </table>
        <table>
          <tr>
            <td><br /><b>Message:</b></td>
          </tr>
        </table>
        <table>
          <tr>
            <td>
              <textarea
                name="message"
                tabindex="5"
                placeholder="(Optional)"
                cols="50"
                rows="5"
              ></textarea>
            </td>
          </tr>
          <tr>
            <td>
              <input type="submit" value="Submit" tabindex="6" />
              <input type="reset" value="Clear Form" tabindex="7" />
            </td>
          </tr>
        </table>
      </form>
    </div>
  </body>
</main>

