<%- include ('partials/header.ejs') %> <%- include ('partials/main_nav.ejs') %>

<main class="container" style="margin: 0 auto; max-width: 900px">
  <div class="jumbotron">
    <h1 class="display-4"><%= title %></h1>
  </div>

  <body>
    <br />
    <div class="content">
      <h3>Contact Me:</h3>
      <form action="mailto:schhangu@my.centennialcollege.ca" method="post">
        <div style="display: flex; flex-wrap: wrap; gap: 10px">
          <div style="flex-basis: 50%">
            <label for="fname"><b>First Name</b></label>
            <input
              type="text"
              name="fname"
              id="fname"
              placeholder="First Name"
              tabindex="1"
              style="width: 100%"
            />
          </div>
          <div style="flex-basis: 50%">
            <label for="lname"><b>Last Name</b></label>
            <input
              type="text"
              name="lname"
              id="lname"
              placeholder="Last Name"
              tabindex="2"
              style="width: 100%"
            />
          </div>
          <div style="flex-basis: 50%">
            <label for="email"><b>Email</b></label>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="name@email.com"
              tabindex="3"
              style="width: 100%"
            />
          </div>
          <div style="flex-basis: 50%">
            <label for="phone"><b>Contact Number</b></label>
            <input
              type="tel"
              name="phone"
              id="phone"
              placeholder="123-456-7890"
              tabindex="4"
              style="width: 100%"
            />
          </div>
          <div style="flex-basis: 100%">
            <label for="message"><b>Message:</b></label>
            <textarea
              name="message"
              id="message"
              tabindex="5"
              placeholder="(Optional)"
              cols="25"
              rows="5"
              style="width: 100%"
            ></textarea>
          </div>
          <div style="flex-basis: 100%">
            <input type="submit" value="Submit" tabindex="6" />
            <input type="reset" value="Clear Form" tabindex="7" />
          </div>
        </div>
      </form>
    </div>
  </body>

  <!--bottom nav-->

  <!--script section-->
  <%- include ('partials/bottom_nav.ejs') %> <%- include ('partials/footer.ejs')
  %>
</main>
